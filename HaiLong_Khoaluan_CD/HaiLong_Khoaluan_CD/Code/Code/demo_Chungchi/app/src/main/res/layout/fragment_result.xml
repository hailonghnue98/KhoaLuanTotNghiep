<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Fragment.ResultFragment"
    android:background="#F5F2F2"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F2F2"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/noidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="20dip"
            android:layout_margin="20dip"
            android:orientation="vertical"
            android:background="@drawable/border_radius">
            <TextView
                android:id="@+id/tvMaDe"
                android:text="Đề 1"
                android:padding="10dip"
                android:textColor="#F55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"></TextView>
            <TextView
                android:id="@+id/tvModule"
                android:text="MODULE 1: MÁY TÍNH CĂN BẢN"
                android:layout_below="@+id/tvMaDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"></TextView>
            <TextView
                android:id="@+id/tvKetqua"
                android:text="Trượt"
                android:layout_below="@+id/tvModule"
                android:textColor="#FD0101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgCaudung"
                    android:layout_below="@+id/tvKetqua"
                    android:src="@drawable/checked_mark"
                    android:padding="2dip"
                    android:layout_width="48dip"
                    android:layout_height="48dip"></ImageView>
                <TextView
                    android:id="@+id/tvCaudung"
                    android:text="10/50"
                    android:textColor="#0DC911"
                    android:layout_below="@+id/tvKetqua"
                    android:layout_toRightOf="@+id/imgCaudung"
                    android:textSize="20sp"
                    android:layout_width="116dip"
                    android:layout_height="48dip"
                    android:gravity="end"
                    android:layout_centerHorizontal="true"
                    android:padding="10dip"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgChualam"
                    android:layout_below="@+id/imgCaudung"
                    android:src="@drawable/warning_mark"
                    android:padding="2dip"
                    android:layout_width="48dip"
                    android:layout_height="48dip"></ImageView>
                <TextView
                    android:id="@+id/tvChualam"
                    android:text="10/50"
                    android:textColor="@color/colorChualam"
                    android:layout_below="@+id/tvCaudung"
                    android:layout_toRightOf="@+id/imgCaudung"
                    android:textSize="20sp"
                    android:layout_width="116dip"
                    android:layout_height="48dip"
                    android:gravity="end"
                    android:padding="10dip"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgCausai"
                    android:layout_below="@+id/imgChualam"
                    android:src="@drawable/wrong_mark"
                    android:padding="2dip"
                    android:layout_width="48dip"
                    android:layout_height="48dip"></ImageView>
                <TextView
                    android:id="@+id/tvCausai"
                    android:text="20/50"
                    android:textColor="#FD0101"
                    android:layout_below="@+id/tvChualam"
                    android:layout_toRightOf="@+id/imgCausai"
                    android:textSize="20sp"
                    android:layout_width="116dip"
                    android:layout_height="48dip"
                    android:gravity="end"
                    android:padding="10dip"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgDiem"
                    android:layout_below="@+id/imgCausai"
                    android:src="@drawable/checklist"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:padding="2dip"></ImageView>
                <TextView
                    android:id="@+id/tvDiem"
                    android:text="3.33"
                    android:textColor="#0571AC"
                    android:layout_below="@+id/tvCausai"
                    android:layout_toRightOf="@+id/imgDiem"
                    android:textSize="20sp"
                    android:layout_width="116dip"
                    android:layout_height="48dip"
                    android:gravity="end"
                    android:padding="10dip"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgThoigian"
                    android:layout_below="@+id/imgDiem"
                    android:src="@drawable/hourglass"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:padding="6dip"></ImageView>
                <TextView
                    android:id="@+id/tvThoigian"
                    android:text="3:45"
                    android:textColor="@color/colorThoigian"
                    android:layout_below="@+id/tvDiem"
                    android:layout_toRightOf="@+id/imgDiem"
                    android:textSize="20sp"
                    android:layout_width="116dip"
                    android:layout_height="48dip"
                    android:gravity="end|center_vertical"
                    android:padding="10dip"></TextView>
            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/noidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/btnXemlai"
                android:text="Đáp án"
                android:layout_width="100dip"
                android:layout_height="50dip"
                android:textColor="#fff"
                android:background="@drawable/border_btn_green"
                android:layout_margin="10dip"></Button>
            <Button
                android:id="@+id/btnLamlai"
                android:text="Làm lại"
                android:layout_width="100dip"
                android:layout_height="50dip"
                android:textColor="#fff"
                android:background="@drawable/border_btn_blue"
                android:layout_margin="10dip"></Button>
            <Button
                android:id="@+id/btnThoat"
                android:text="Thoát"
                android:layout_width="100dip"
                android:layout_height="50dip"
                android:textColor="#fff"
                android:background="@drawable/border_btn_red"
                android:layout_margin="10dip"></Button>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
