<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PDFViewActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/colorPrimary"
        android:padding="5dip">
        <TextView
            android:layout_width="20dip"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:id="@+id/tvSlideName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PDFView"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"></TextView>
        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:src="@drawable/close"></ImageView>
    </LinearLayout>
    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"/>
    <TextView
        android:id="@+id/tvPage"
        android:text="1/100"
        android:layout_alignBottom="@+id/pdfView"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/border_btn_green"
        android:textColor="#fff"
        android:padding="5dip"></TextView>
    <TextView
        android:id="@+id/tvVeDau"
        android:text="Trang Đầu"
        android:layout_alignBottom="@+id/pdfView"
        android:layout_marginBottom="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/border_btn_green"
        android:textColor="#fff"
        android:padding="5dip"></TextView>
    <TextView
        android:id="@+id/tvVeCuoi"
        android:text="Trang Cuối"
        android:layout_alignBottom="@+id/pdfView"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/border_btn_green"
        android:textColor="#fff"
        android:padding="5dip"></TextView>
</RelativeLayout>