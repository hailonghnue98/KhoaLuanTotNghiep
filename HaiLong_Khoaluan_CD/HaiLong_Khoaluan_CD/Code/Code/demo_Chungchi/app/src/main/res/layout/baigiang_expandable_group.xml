        android:id="@+id/tvBGGroupName"
        android:text="MODULE 3: CUOOJC SONG TRUC TUYEN"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#fff"
